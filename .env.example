# Environment variables for edu-ai-workflow-automation
# Copy this file to .env and fill in your API keys

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
MIDJOURNEY_API_KEY=your_midjourney_api_key_here

# LLM Settings
DEFAULT_LLM_MODEL=gpt-3.5-turbo
MAX_TOKENS=2000
TEMPERATURE=0.7

# Processing Settings
MAX_FILE_SIZE_MB=50
ENABLE_QUALITY_CHECK=true
QUALITY_CHECK_MODEL=gpt-4

# Image Generation
IMAGE_GENERATION_MODEL=dall-e-3
IMAGE_SIZE=1024x1024

# Layout Settings
DEFAULT_TEMPLATE=academic
SLIDE_FORMAT=pptx

# Logging
LOG_LEVEL=INFO
ENABLE_EXPERIMENT_LOGGING=true